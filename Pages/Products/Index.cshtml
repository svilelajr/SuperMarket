@page
@model SuperMarket.Pages_Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button id="btnGerarPDF">Gerar PDF</button>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnGerarPDF").click(function () {
                // Enviar uma solicitação para o servidor para gerar o PDF
                $.ajax({
                    url: '/Products/Index?handler=GeneratePdf',
                    method: 'GET',
                    xhrFields: {
                        responseType: 'arraybuffer' // Define o tipo de resposta como arraybuffer
                    },
                    success: function (data) {
                        // Criar um Blob a partir dos dados recebidos
                        var blob = new Blob([data], { type: 'application/pdf' });
                        // Criar um URL para o blob
                        var url = window.URL.createObjectURL(blob);
                        // Criar um link e clicar nele para iniciar o download do PDF
                        var a = document.createElement('a');
                        a.href = url;
                        a.download = 'lista_produtos.pdf';
                        document.body.appendChild(a);
                        a.click();
                        // Remover o link após o download ser concluído
                        window.URL.revokeObjectURL(url);
                    },
                    error: function (xhr, status, error) {
                        console.error('Erro ao gerar o PDF:', error);
                        // Lidar com erros, por exemplo, exibir uma mensagem de erro na página
                    }
                });
            });
        });
    </script>
}
